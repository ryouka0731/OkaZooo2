{
  "name": "example",
  "author": {
    "name": "Ra1NuX",
    "email": "ra1nux.01@gmail.com"
  },
  "version": "0.0.0",
  "main": "electron/electron.ts",
  "scripts": {
    "dev": "concurrently \"vite\" \"bun ./esbuild.config.mjs --watch\"",
    "build:electron": "bun ./esbuild.config.mjs",
    "build:renderer": "vite build",
    "build:dev:electron": "bun ./esbuild.config.mjs --watch",
    "build": "npm run build:renderer && npm run build:electron",
    "lint": "eslint .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "preview": "vite preview",
    "start": "electronmon ./app",
    "electron:vite:build": "concurrently \"cross-env BROWSER=none bun dev\" \"wait-on http://localhost:5173 && bun build:dev:electron\"",
    "electron:dev": "concurrently \"bun electron:vite:build\" \"bun start\"",
    "dist": "npm run build && electron-builder --config electron-builder.config.js -w",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3",
    "@types/bun": "^1.2.4",
    "electron-log": "^5.3.0",
    "electron-serve": "^2.1.1",
    "electron-updater": "^6.3.9",
    "electronmon": "^2.0.3",
    "framer-motion": "^12.34.0",
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.4.0",
    "swiper": "^12.1.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "happy-dom": "^12.0.0",
    "husky": "^9.0.11",
    "jsdom": "^28.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "storybook": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vitest": "^1.0.0",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.example",
    "productName": "example",
    "copyright": "Copyright Â© 2021 ${author}",
    "linux": {
      "target": [
        "pacman"
      ],
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
